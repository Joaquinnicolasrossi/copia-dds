{{#partial "contenido"}}
<h1 class="form-titulo">Editar Hecho</h1>
{{#if error}}
  <div class="alerta-error">
    {{error}}
  </div>
{{/if}}

{{#if mensaje}}
  <div class="alerta-exito">
    {{mensaje}}
  </div>
{{/if}}
<form action="/hechos/{{id}}/actualizar" method="post" class="form-editar">

    <input type="text" name="titulo" value="{{titulo}}" placeholder="Título del hecho">
    <textarea name="descripcion" placeholder="Descripción del hecho">{{descripcion}}</textarea>

        <input type="text" id="categoria" name="categoria" value="{{categoria}}" placeholder="Categoría">


        <input type="text" id="latitud" name="latitud" value="{{latitud}}" placeholder="Latitud">


        <input type="text" id="longitud" name="longitud" value="{{longitud}}" placeholder="Longitud">

    <button type="submit">Guardar cambios</button>
</form>


{{/partial}}

{{> templates/layout }}