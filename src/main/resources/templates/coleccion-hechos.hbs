{{#partial "contenido"}}
    <div class="coleccion-lista">
        <h1>Hechos de: {{coleccion.titulo}}</h1>

        <p> {{coleccion.descripcion}} </p>

        <div  class="info-box">
            <span><strong>üìä Total de hechos:</strong> {{totalHechos}}</span>
            <span><strong>üìÑ P√°gina:</strong> {{numeroPaginaActual}} de {{totalPaginas}}</span>
        </div>

        {{#if error}}
            <p class="error">{{error}}</p>
        {{else}}
            {{#if hechos}}
                <table class="tabla-colecciones">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>T√≠tulo</th>
                        <th>Categor√≠a</th>
                        <th>Provincia</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each hechos}}
                        <tr>
                            <td>{{id}}</td>
                            <td><strong>{{titulo}}</strong></td>
                            <td>
                                <span class="categoria-badge">
                                    {{categoria}}
                                </span>
                            </td>
                            <td>
                                {{#if provincia}}
                                    {{provincia.nombre}}
                                {{else}}
                                    <span class="sin-provincia">Sin provincia</span>
                                {{/if}}
                            </td>
                            <td>{{fecha}}</td>
                            <td> {{estado}} </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                <!-- Paginaci√≥n  de colecciones-->
                <div class="paginacion">
                    {{#if tienePaginaAnterior}}
                        <a href="/colecciones/{{coleccion.id}}/hechos?pagina={{paginaAnterior}}"
                        class="btn-ver">
                        ‚Üê Anterior
                        </a>
                    {{else}}
                        <button disabled>
                            ‚Üê Anterior
                        </button>
                    {{/if}}

                    <span class="pagina-actual">
                    P√°gina <strong>{{numeroPaginaActual}}</strong> de <strong>{{totalPaginas}}</strong>
                </span>

                    {{#if tienePaginaSiguiente}}
                        <a href="/colecciones/{{coleccion.id}}/hechos?pagina={{paginaSiguiente}}"
                        class="btn-ver">
                        Siguiente ‚Üí
                        </a>
                    {{else}}
                        <button disabled>
                            Siguiente ‚Üí
                        </button>
                    {{/if}}
                </div>
            {{else}}
                <p class="sin-colec">No hay hechos en esta colecci√≥n</p>
            {{/if}}
        {{/if}}

        <div style="margin-top: 30px;">
            <a href="/colecciones" class="btn-ver">‚Üê Volver a colecciones</a>
        </div>
    </div>
{{/partial}}

