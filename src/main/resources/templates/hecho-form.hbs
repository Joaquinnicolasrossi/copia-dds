{{#partial "contenido"}}
    <h1> Crear Hecho </h1>
    <form class="hecho-form" action="/hechos" method="post" enctype="multipart/form-data">
        <div>
            <label>Titulo</label>
            <input type="text" name="titulo" required>
        </div>
        <div>
            <label>Descripcion</label>
            <textarea name="descripcion" required></textarea>
        </div>
        <div>
            <label>Categoria</label>
            <input type="text" name="categoria" required>
        </div>
        <div>
            <label>Fecha</label>
            <input type="datetime-local" name="fecha" required>
        </div>
        <div>
            <label>Latitud</label>
            <input type="number" step="any" name="latitud" required>
        </div>
        <div>
            <label>Longitud</label>
            <input type="number" step="any" name="longitud" required>
        </div>
        <div>
            <label>Multimedia</label>
            <input type="media" name="multimedia" accept="image/jpeg, video/mp4" multiple>
            <small class="info-media">Máximo 5 archivos. Tamaño total permitido: 1 MB.</small>
        </div>
        <button type="submit">Crear</button>
    </form>
{{/partial}}

{{>templates/layout}}