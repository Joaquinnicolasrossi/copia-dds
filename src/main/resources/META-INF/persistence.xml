<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- ================= PRODUCCIÃ“N / DESARROLLO ================= -->
    <persistence-unit name="simple-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>Coleccion</class>
        <class>Consenso</class>
        <class>Criterio</class>
        <class>EstadisticaRegistro</class>
        <class>Fuente</class>
        <class>FuenteDinamica</class>
        <class>FuenteEstaticaIncendios</class>
        <class>FuenteAgregada</class>
        <class>FuenteDemoAdapter</class>
        <class>Hecho</class>
        <class>Multimedia</class>
        <class>Provincia</class>
        <class>Solicitud</class>
        <class>SolicitudRevision</class>
        <class>Usuario</class>

        <properties>
            <property name="hibernate.physical_naming_strategy"
                      value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl"/>
            <property name="hibernate.implicit_naming_strategy"
                      value="org.hibernate.boot.model.naming.ImplicitNamingStrategyLegacyJpaImpl"/>
            <property name="hibernate.archive.autodetection" value="class,hbm"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://host.docker.internal:3306/metamapa"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="joacocapo"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

    <!-- ================= TEST EN MEMORIA ================= -->
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>Coleccion</class>
        <class>Consenso</class>
        <class>Criterio</class>
        <class>EstadisticaRegistro</class>
        <class>Fuente</class>
        <class>FuenteDinamica</class>
        <class>FuenteEstaticaIncendios</class>
        <class>FuenteAgregada</class>
        <class>FuenteDemoAdapter</class>
        <class>Hecho</class>
        <class>Multimedia</class>
        <class>Solicitud</class>
        <class>SolicitudRevision</class>
        <class>Usuario</class>

        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>

            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:testdb;DB_CLOSE_DELAY=-1"/>-->
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:C:/Temp/hsqldb/testdb;shutdown=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
